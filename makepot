#!/bin/bash

intltool-extract --type=gettext/glade files/usr/share/deeznutz/deeznutz-menu-editor/deeznutz-menu-editor.ui

xgettext --language=C --keyword=_ --keyword=N_ --output=cinnamon.pot src/*.c src/*/*.c files/usr/share/cinnamon/cinnamon-menu-editor/cinnamon-menu-editor.ui.h
xgettext --language=JavaScript --keyword=_ --keyword=N_ --output=cinnamon.pot --join-existing --from-code=UTF-8 js/*/*.js files/usr/share/cinnamon/*/*/*.js
xgettext --language=Python --keyword=_ --output=deeznutz.pot --join-existing generate_additional_files.py files/usr/share/cinnamon/*/*.py files/usr/share/cinnamon/*/*/*.py files/usr/bin/cinnamon-launcher
cd files
usr/share/deeznutz/deeznutz-json-makepot/deeznutz-json-makepot.py ../deeznutz
cd ..

rm -f files/usr/share/deeznutz/deeznutz-menu-editor/deeznutz-menu-editor.ui.h
