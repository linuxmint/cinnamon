#!/usr/bin/python3

""" Launch the Cinnamon users and groups editor utility
"""

import os
import gettext

gettext.install('cinnamon', '/usr/share/locale')

tool = '/usr/share/cinnamon/cinnamon-settings-users/cinnamon-settings-users.py'
prompt = _('Please enter your password to configure users and groups')
icon = 'system-users'

if os.path.exists('/usr/bin/pkexec'):
    launcher = 'pkexec'
elif os.path.exists('/usr/bin/gksu'):
    launcher = 'gksu  --message "<b>{0}</b>"'.format(prompt)
elif os.path.exists('/usr/bin/kdesudo'):
    launcher = 'kdesudo -i {0} -d --comment "<b>{1}</b>"'.format(
                 icon, prompt)

command = '{0} {1}'.format(launcher, tool)
os.system(command)

