{
    "section-calendar": {
        "type": "section",
        "description": "Calendar"
    },
    "show-events" : {
        "type" : "switch",
        "default" : true,
        "description": "Show calendar events",
        "tooltip": "Check this to display events in the calendar."
    },
    "show-week-numbers" : {
        "type" : "switch",
        "default" : false,
        "description": "Show week numbers in calendar",
        "tooltip": "Check this to show week numbers in the calendar."
    },
    "show-weekday-headers" : {
        "type" : "switch",
        "default" : true,
        "description": "Show weekday headers in calendar",
        "tooltip": "Check this to show weekday headers (Mon, Tue, etc.) in the calendar."
    },
    "first-day-of-week-override": {
        "type": "combobox",
        "default": 7,
        "description": "First day of week",
        "tooltip": "Set the first day of week (applies system-wide)",
        "options": {
            "Use locale default": 7,
            "Sunday": 0,
            "Monday": 1
        }
    },
    "section-clock": {
        "type": "section",
        "description": "Clock"
    },
    "use-custom-format" : {
        "type" : "switch",
        "default" : false,
        "description": "Use custom date format",
        "tooltip": "Check this to define a custom format for the date in the calendar applet. When unchecked, predefined OS-style formats are used."
    },
    "os-format-type": {
        "type": "combobox",
        "default": "Linux Mint",
        "description": "Date format style",
        "dependency": "!use-custom-format",
        "options": {
            "Linux Mint Style (Mon Jan 15 14:30)": "Linux Mint",
            "macOS Style (Mon Jan 15 14:30)": "macOS",
            "Windows 10 Style (14:30 Mon Jan 15)": "Windows 10",
            "Windows 11 Style (14:30 Mon, Jan 15)": "Windows 11",
            "Ubuntu Style (Mon 15 Jan 2024 14:30)": "Ubuntu",
            "Windows 7 Style (14:30 01/15/2024)": "Windows 7",
            "GNOME Style (Mon 15 Jan 14:30)": "GNOME",
            "KDE Style (Mon 15 Jan 2024 14:30)": "KDE"
        }
    },
    "use-24h-format" : {
        "type" : "switch",
        "default" : true,
        "description": "Use 24-hour time format",
        "dependency": "!use-custom-format",
        "tooltip": "Use 24-hour time format instead of 12-hour AM/PM format."
    },
    "show-seconds" : {
        "type" : "switch",
        "default" : false,
        "description": "Show seconds",
        "dependency": "!use-custom-format",
        "tooltip": "Show seconds in the time display."
    },
    "date-separator": {
        "type": "combobox",
        "default": "/",
        "description": "Date separator",
        "dependency": "!use-custom-format",
        "options": {
            "Slash (/)": "/",
            "Dash (-)": "-",
            "Dot (.)": "."
        },
        "tooltip": "Character used to separate date components."
    },
    "applet-format" : {
        "type" : "entry",
        "default" : "%a %b %d %H:%M",
        "description" : "Custom applet format",
        "dependency" : "use-custom-format",
        "tooltip" : "Date format displayed in the calendar applet."
    },
    "custom-format" : {
        "type" : "entry",
        "default" : "%A, %B %e, %H:%M",
        "description" : "Custom format",
        "dependency" : "use-custom-format",
        "tooltip" : "Enter your custom format. Use strftime format codes."
    },
    "use-custom-time-format" : {
        "type" : "switch",
        "default" : false,
        "description" : "Use custom time format",
        "dependency" : "!use-custom-format",
        "tooltip" : "Check this to define a custom format for the time display. When unchecked, predefined OS-style formats are used."
    },
    "time-format" : {
        "type" : "entry",
        "default" : "%H:%M",
        "description" : "Custom time format",
        "dependency" : "use-custom-time-format",
        "tooltip" : "Enter your custom time format. Use strftime format codes."
    },
    "format-help-visible" : {
        "type" : "switch",
        "default" : false,
        "description" : "Show format reference",
        "dependency" : "use-custom-format",
        "tooltip" : "Toggle visibility of format reference below"
    },
    "format-help-header" : {
        "type" : "header",
        "description" : "Date Format Reference",
        "dependency" : "format-help-visible"
    },
    "format-help-columns" : {
        "type" : "twocolumnlabel", 
        "left-description" : "<b>Date codes</b>",
        "right-description" : "<b>Time codes</b>",
        "dependency" : "format-help-visible"
    },
    "format-help-row1" : {
        "type" : "twocolumnlabel", 
        "left-description" : "<tt>%Y</tt> → 2024 (Year)",
        "right-description" : "<tt>%H</tt> → 13 (Hour 24h)",
        "dependency" : "format-help-visible"
    },
    "format-help-row2" : {
        "type" : "twocolumnlabel",
        "left-description" : "<tt>%m</tt> → 01 (Month number)",
        "right-description" : "<tt>%I</tt> → 01 (Hour 12h)",
        "dependency" : "format-help-visible"
    },
    "format-help-row3" : {
        "type" : "twocolumnlabel",
        "left-description" : "<tt>%d</tt> → 15 (Day of month)",
        "right-description" : "<tt>%M</tt> → 30 (Minutes)",
        "dependency" : "format-help-visible"
    },
    "format-help-row4" : {
        "type" : "twocolumnlabel",
        "left-description" : "<tt>%A</tt> → Monday (Full weekday)",
        "right-description" : "<tt>%S</tt> → 45 (Seconds)",
        "dependency" : "format-help-visible"
    },
    "format-help-row5" : {
        "type" : "twocolumnlabel",
        "left-description" : "<tt>%a</tt> → Mon (Short weekday)",
        "right-description" : "<tt>%p</tt> → AM/PM",
        "dependency" : "format-help-visible"
    },
    "format-help-row6" : {
        "type" : "twocolumnlabel",
        "left-description" : "<tt>%B</tt> → January (Full month)",
        "right-description" : "<tt>%n</tt> → New line",
        "dependency" : "format-help-visible"
    },
    "format-help-row7" : {
        "type" : "twocolumnlabel",
        "left-description" : "<tt>%b</tt> → Jan (Short month)",
        "right-description" : "",
        "dependency" : "format-help-visible"
    },
    "format-help-footer" : {
        "type" : "label",
        "description" : "Type 'man strftime' in terminal for complete reference",
        "dependency" : "format-help-visible"
    },
    "section-tooltip": {
        "type": "section",
        "description": "Tooltip"
    },
    "tooltip-format" : {
        "type" : "entry",
        "default" : "%A, %B %e, %Y",
        "description" : "Tooltip format",
        "tooltip" : "Date format displayed in tooltip when hovering over applet."
    },
    "tooltip-format-help-visible" : {
        "type" : "switch",
        "default" : false,
        "description" : "Show tooltip format reference",
        "tooltip" : "Toggle visibility of tooltip format reference below"
    },
    

    "section-keyboard": {
        "type": "section",
        "description": "Keyboard shortcuts"
    },
    "key-open": {
        "type": "keybinding",
        "description": "Show calendar",
        "default": "<Super>c",
        "tooltip" : "Set keybinding(s) to show the calendar."
    }
}
